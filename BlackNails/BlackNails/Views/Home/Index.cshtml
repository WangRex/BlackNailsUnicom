@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- STYLER -->
                        <!-- /STYLER -->
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="javascript:void(0);">首页</a>
                            </li>
                            <li>快易修首页</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left"></h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <!-- /PAGE HEADER -->

            <div class="row">
                <div class="col-md-12">
                    <!-- LABELLED BIG BUTTONS -->
                    <div class="box">
                        <div class="box-title">
                            <h4><i class="fa fa-bars"></i>订单情况</h4>
                        </div>
                        <div class="box-body">
                            <div class="row" id="orderDetails">
                                
                            </div>
                        </div>
                    </div>
                    <!-- /LABELLED BIG BUTTONS -->
                </div>
            </div>
            <div class="footer-tools">
                <span class="go-top">
                    <i class="fa fa-chevron-up"></i> 回到顶部
                </span>
            </div>
        </div><!-- /CONTENT-->
    </div>
</div>

<script id="Orders-template" type="text/html">
    <div class="col-md-4">
        <a class="btn btn-danger btn-icon input-block-level" href="/Order/Index">
            <i class="fa fa-bell fa-2x"></i>
            <div>新订单</div>
            <span class="label label-right label-warning">{{New}}</span>
        </a>
    </div>
    <div class="col-md-4">
        <a class="btn btn-primary btn-icon input-block-level" href="/Order/Index">
            <i class="fa fa-bookmark fa-2x"></i>
            <div>处理中</div>
            <span class="label label-right label-danger">{{Dealing}}</span>
        </a>
    </div>
    <div class="col-md-4">
        <a class="btn btn-pink btn-icon input-block-level" href="/Order/Index">
            <i class="fa fa-star fa-2x"></i>
            <div>已完成</div>
            <span class="label label-right label-info">{{Complete}}</span>
        </a>
    </div>
</script>

<script>
    jQuery(document).ready(function () {
        App.setPage("index");  //Set current page
        App.init(); //Initialise plugins and elements
        App.globalAjax("get", "/Order/MyJsonListCount", {}, function (result) {
            var html = template('Orders-template', result.Data);
            $("#orderDetails").html(html);
        });
    });
</script>
<!-- /JAVASCRIPTS -->
