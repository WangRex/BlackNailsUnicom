                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                <a href="javascript:;" class="remove">
                                    <i class="fa fa-times"></i>
                                </a>
                            </div>
                        </div>
                        <div class="box-body">
                            <div id="chart-revenue" style="height:240px"></div>
                        </div>
                    </div>
                </div>
                <!-- /COLUMN 2 -->
            </div>
