@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- SELECT2 -->
<link rel="stylesheet" type="text/css" href="~/Cloud_Admin/js/select2/select2.min.css" />
<!-- UNIFORM -->
<link rel="stylesheet" type="text/css" href="~/Cloud_Admin/js/uniform/css/uniform.default.min.css" />

<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- STYLER -->
                        <!-- /STYLER -->
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="javascript:void(0);">首页</a>
                            </li>
                            <li>
                                <a href="javascript:void(0);">外线员管理</a>
                            </li>
                            <li>查看外线员</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">查看外线员</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <div class="box border green">
                <div class="box-title">
                    <h4><i class="fa fa-bars"></i>查看外线员</h4>
                </div>
                <div class="box-body big">
                    <form class="form-horizontal" id="ViewForm" data-OutsideTroubleMan_ID="@TempData["OutsideTroubleMan_ID"]" role="form" action="/OutsideTroubleMan/Edit" method="post"></form>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="OutsideTroubleMan-template" type="text/html">
    <div class="form-group">
        <label class="col-sm-3 control-label">姓名</label>
        <div class="col-sm-9">
            <input class="form-control" name="Name" type="text" value="{{Name}}" placeholder="姓名">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">外线员电话</label>
        <div class="col-sm-9">
            <input class="form-control" name="Phone" type="text" value="{{Phone}}" placeholder="外线员电话">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">外线员工龄</label>
        <div class="col-sm-9">
            <input class="form-control" name="WorkYear" type="text" value="{{WorkYear}}" placeholder="外线员工龄">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">外线员工号</label>
        <div class="col-sm-9">
            <input class="form-control" name="EmployeeNo" type="text" value="{{EmployeeNo}}" placeholder="外线员工号">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">外线员所属部门</label>
        <div class="col-sm-9">
            <input class="form-control" name="Department" type="text" value="{{Department}}" placeholder="外线员所属部门">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">外线员负责区域简介</label>
        <div class="col-sm-9">
            <input class="form-control" name="ResponsibleAreaBrief" type="text" value="{{ResponsibleAreaBrief}}" placeholder="外线员负责区域简介">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">入职时间</label>
        <div class="col-sm-9">
            <input class="form-control datepicker" name="OnboardTime" type="text" value="{{OnboardTime}}" size="10">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">离职时间</label>
        <div class="col-sm-9">
            <input class="form-control datepicker" name="OffboardTime" type="text" value="{{OffboardTime}}" size="10">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">外线员备注</label>
        <div class="col-sm-9">
            <input class="form-control" name="Remark" type="text" value="{{Remark}}" placeholder="外线员备注">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
            <button type="submit">编辑</button>
        </div>
    </div>
</script>

<!-- SELECT2 -->
<script type="text/javascript" src="~/Cloud_Admin/js/select2/select2.min.js"></script>
<!-- UNIFORM -->
<script type="text/javascript" src="~/Cloud_Admin/js/uniform/jquery.uniform.min.js"></script>

<script>
    jQuery(document).ready(function () {
        //Set current page
        App.setPage("forms");
        //Initialise plugins and elements
        App.init();
        var OutsideTroubleMan_ID = $("#ViewForm").attr("data-OutsideTroubleMan_ID");
        App.globalAjax("get", "/OutsideTroubleMan/MyJsonOTM", { OutsideTroubleMan_ID: OutsideTroubleMan_ID }, function (result) {
            var html = template('OutsideTroubleMan-template', result.Data);
            $("#ViewForm").html(html);
            $(".datepicker").datepicker();
        });
    });
</script>
<!-- /JAVASCRIPTS -->
